{% extends 'base.html.twig' %}

{% block title %}Match #{{ match_id }}{% endblock %}
{% block body_class %}page-match{% endblock %}

{% block main %}
<section class="match container">
  <header class="match__header">
    <h1>Match #{{ match_id }}</h1>
    <div class="match__controls">
      <button class="btn btn-primary" id="btn-start">▶ Démarrer</button>
      <button class="btn btn-ghost"   id="btn-pause">⏸ Pause</button>
        <button class="btn btn-ghost"   id="btn-reset">↺ Reset</button>
    </div>
  </header>

  <div class="match__layout">
    <aside class="hud hud--left">
      <h3>Alliés</h3>
      <ul id="hud-allies"></ul>
    </aside>

    <main class="board-wrap">
      <div class="board" id="board" data-cols="7" data-rows="4">
        {% for r in 0..3 %}
          {% for c in 0..6 %}
            <div class="cell" data-x="{{ c }}" data-y="{{ r }}"></div>
          {% endfor %}
        {% endfor %}
      </div>
      <div class="log" id="battle-log"></div>
    </main>

    <aside class="hud hud--right">
      <h3>Ennemis</h3>
      <ul id="hud-enemies"></ul>
    </aside>
  </div>
</section>

{# si tu utilises ces balises quelque part #}
<script id="allies-from-replay" type="application/json">
  {{ (replay.teams.ally  | default([])) | json_encode | raw }}
</script>
<script id="enemies-from-replay" type="application/json">
  {{ (replay.teams.enemy | default([])) | json_encode | raw }}
</script>
{% endblock %}
